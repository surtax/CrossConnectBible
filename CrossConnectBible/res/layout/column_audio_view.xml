<?xml version="1.0" encoding="utf-8"?>
<!--  Main View and master controller for the main views: ie. Bible Text, Sermon, Audio Bible -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:gravity="bottom"
    >
    <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1">
 	   <org.crossconnect.bible.actions.ColumnListView android:id="@+id/reading_audio_list" android:layout_height="wrap_content" android:layout_width="match_parent"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/mediaController_container" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
    </LinearLayout>
</LinearLayout>
